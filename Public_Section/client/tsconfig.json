{
  "compilerOptions": {
    "target": "ES5",                        // Specify ECMAScript target version
    "lib": ["DOM", "DOM.Iterable", "ESNext"], // Specify library files to be included in the compilation
    "allowJs": true,                       // Allow JavaScript files to be compiled
    "skipLibCheck": true,                  // Skip type checking of declaration files
    "strict": true,                        // Enable all strict type-checking options
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in file names
    "noEmit": true,                        // Do not emit output (useful for type checking only)
    "esModuleInterop": true,               // Enables emit interoperability between CommonJS and ES Modules
    "module": "ESNext",                    // Specify module code generation
    "moduleResolution": "node",            // Use Node.js-style module resolution
    "resolveJsonModule": true,             // Allow importing JSON modules
    "jsx": "react-jsx",                    // Support JSX in React 17+
    "baseUrl": "./",                       // Base directory for resolving non-relative module names
    "paths": {                            // Module resolution paths
      "@/*": ["src/*"]
    },
    "types": ["node"]                     // Add Node.js types
  },
  "include": ["src", "src/react-icons.d.ts"], // Specify directories to include in the compilation 
  "exclude": ["node_modules", "**/*.test.tsx"] // Specify files and directories to exclude from the compilation
}
